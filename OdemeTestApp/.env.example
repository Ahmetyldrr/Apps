# Django Settings
SECRET_KEY=django-insecure-example-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite default, production'da PostgreSQL/MySQL kullanın)
DATABASE_URL=sqlite:///db.sqlite3

# ================================
# ÖDEME SİSTEMLERİ API ANAHTARLARI
# ================================

# STRIPE (Önerilen - En kolay entegrasyon)
# https://stripe.com -> Dashboard -> Developers -> API keys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PAYPAL
# https://developer.paypal.com -> My Apps & Credentials
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox  # production için 'live' yapın

# İYZICO (Türkiye)
# https://merchant.iyzipay.com -> Ayarlar -> API Bilgileri
IYZICO_API_KEY=your_iyzico_api_key_here
IYZICO_SECRET_KEY=your_iyzico_secret_key_here
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com  # prod: https://api.iyzipay.com

# PAPARA (Türkiye)
# Papara İş Yeri Paneli -> API Ayarları
PAPARA_API_KEY=your_papara_api_key_here
PAPARA_API_SECRET=your_papara_api_secret_here

# SQUARE
# https://developer.squareup.com -> Applications
SQUARE_APPLICATION_ID=your_square_application_id_here
SQUARE_ACCESS_TOKEN=your_square_access_token_here
SQUARE_ENVIRONMENT=sandbox  # production için 'production'

# RAZORPAY (Hindistan)
# https://razorpay.com -> Dashboard -> Settings -> API Keys
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# ================================
# PRODUCTION AYARLARI
# ================================

# Email Settings (ödeme onayları için)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# Redis (cache için - opsiyonel)
REDIS_URL=redis://localhost:6379/0

# Celery (async tasks için - opsiyonel)
CELERY_BROKER_URL=redis://localhost:6379/0

# Sentry (error tracking için - opsiyonel)
SENTRY_DSN=your_sentry_dsn_here

# ================================
# GÜVENLİK AYARLARI
# ================================

# CSRF ve Session güvenliği
CSRF_COOKIE_SECURE=False  # Production'da True
SESSION_COOKIE_SECURE=False  # Production'da True
SECURE_SSL_REDIRECT=False  # Production'da True

# HTTPS ayarları (production için)
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# ================================
# WEBHOOK URL'LERİ
# ================================
# Bu URL'leri ödeme sistemlerinin panellerinde ayarlamanız gerekiyor

# Stripe Webhooks
# Endpoint: https://yourdomain.com/stripe/webhook/
# Events: payment_intent.succeeded, payment_intent.payment_failed

# PayPal Webhooks  
# Endpoint: https://yourdomain.com/paypal/webhook/
# Events: PAYMENT.SALE.COMPLETED, PAYMENT.SALE.DENIED

# İyzico Webhooks
# Endpoint: https://yourdomain.com/iyzico/webhook/

# ================================
# NOTLAR
# ================================

# 1. Bu dosyayı .env olarak kaydedin
# 2. .env dosyasını .gitignore'a ekleyin
# 3. Production'da gerçek değerleri kullanın
# 4. API anahtarlarını kimseyle paylaşmayın
# 5. Test anahtarları ile başlayın
# 6. Webhook URL'lerini ödeme sistemlerinde ayarlayın
# 7. HTTPS zorunlu (production için)

